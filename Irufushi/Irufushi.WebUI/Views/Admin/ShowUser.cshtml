@model Abstract.Entities.UserProfile

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="text-center">
            <h2>User Info</h2>
            <hr />
        </div>
    </div>
</div>

<div class="col-md-6 col-md-offset-3">
    <div class="row">
        <div class="text-center">
            <h2>
                @Html.DisplayFor(m => m.AboutUser.FirstName)
                @Html.DisplayFor(m => m.AboutUser.LastName)
            </h2>
        </div>
    </div>
</div>
    <div class="col-md-6 col-md-offset-3">
    <div class="row">
        <div class="form-horizontal">
            <div class="col-md-6">
                <div class="form-horizontal">
                    @Html.LabelFor(m => m.AboutUser.BirthDate)
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-horizontal">
                    @Html.DisplayFor(m => m.AboutUser.BirthDate)
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-horizontal">
            <div class="col-md-6">
                <div class="form-horizontal">
                    @Html.LabelFor(m => m.AboutUser.Gender)
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-horizontal">
                    @Html.DisplayFor(m => m.AboutUser.Gender)
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="form-horizontal">
            <div class="col-md-6">
                <div class="form-horizontal">
                    @Html.LabelFor(m => m.Location.Country)
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-horizontal">
                    @Html.DisplayFor(m => m.Location.Country)
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-horizontal">
            <div class="col-md-6">
                <div class="form-horizontal">
                    @Html.LabelFor(m => m.Location.City)
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-horizontal">
                    @Html.DisplayFor(m => m.Location.City)
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-horizontal">
            <div class="col-md-6">
                <div class="form-horizontal">
                    @Html.LabelFor(m => m.Location.Address)
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-horizontal">
                    @Html.DisplayFor(m => m.Location.Address)
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="form-horizontal">
            <div class="col-md-6">
                <div class="form-horizontal">
                    @Html.LabelFor(m => m.Contacts.ContEmail)
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-horizontal">
                    @Html.DisplayFor(m => m.Contacts.ContEmail)
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-horizontal">
            <div class="col-md-6">
                <div class="form-horizontal">
                    @Html.Label("Phone number")
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-horizontal">
                    @Html.DisplayFor(m => m.Contacts.PhoneNum)
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-horizontal">
            <div class="col-md-6">
                <div class="form-horizontal">
                    @Html.Label("Mobile phone number")
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-horizontal">
                    @Html.DisplayFor(m => m.Contacts.PhoneNum)
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-horizontal">
            <div class="col-md-6">
                <div class="form-horizontal">
                    @Html.LabelFor(m => m.Contacts.ICQ)
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-horizontal">
                    @Html.DisplayFor(m => m.Contacts.ICQ)
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-horizontal">
            <div class="col-md-6">
                <div class="form-horizontal">
                    @Html.LabelFor(m => m.Contacts.Skype)
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-horizontal">
                    @Html.DisplayFor(m => m.Contacts.Skype)
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="text-center">
            <h2>Messages</h2>
            <hr />
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        @foreach (var item in Model.Senders)
        {
            <p>
            <div class="row">
                <div class="form-horizontal">
                    <div class="row">
                        <div class="col-md-9">
                            @item.Sender.AboutUser.FirstName :
                            @item.Content
                        </div>
                        <div class="col-md-3">
                            @item.SendDateTime
                        </div>
                    </div>
                </div>
            </div>
        </p>
        }
    </div>
</div>