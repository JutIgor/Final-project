@model Irufushi.WebUI.Models.UserModel

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="text-center">
            <h2>Friends</h2>
            <hr />
        </div>
    </div>
</div>

<div class="col-md-6 col-md-offset-3">
    @foreach (var item in Model.Users)
    {
        <div class="row">
            <div class="form-horizontal">
                <div class="col-md-8">
                    @Html.ActionLink(item.FirstName + " " + item.LastName,
        "Index", "User", new { id = item.UserId }, null)
                </div>
                <div class="col-md-4">
                    @Html.ActionLink("Delete from friends", "DeleteFriend", "User",
        new { id = item.UserId }, null)
                </div>
            </div>
        </div>
        <br />
    }
</div>