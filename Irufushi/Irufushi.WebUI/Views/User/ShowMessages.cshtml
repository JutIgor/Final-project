@model Irufushi.WebUI.Models.MessageModel

@using (Html.BeginForm())
{ 
<fieldset class="form-horizontal margin-login col-sm-offset-3 col-sm-10" id="UserInputs">

    <div class="form-group form-inline">
        @Html.Label("Enter the message", new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            <div class="input-group">
                @Html.TextBoxFor(m => m.NewMessage.Content, new { @class = "form-control", @id = "Content" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" class="btn btn-primary btn-login" id="SubmitBtn" value="Send" />
        </div>
    </div>

    @foreach (var item in Model.Messages)
    {

        <div class="form-group form-inline ">
            <ul>
                <li>
                    @(item.Sender.AboutUser.FirstName == null ? "" : item.Sender.AboutUser.FirstName)
                </li>
                <li>
                    @item.Content
                </li>
                <li>
                    @item.SendDateTime
                </li>
            </ul>
        </div>

    }
</fieldset>
}